@model StarSecurity.Models.Services

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Services</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />*@
                <select id="type" asp-for="ServiceName" class="form-control">
                    <option value="">-- Select Service Name --</option>
                    <option value="Manned Guarding">Manned Guarding</option>
                    <option value="Cash Services">Cash Services</option>
                    <option value="Recruitment and Training">Recruitment and Training</option>
                    <option value="Electronic Security Systems">Electronic Security Systems</option>
                </select>
                @*<p id="MannedGuarding">
                Showcase the service portfolio of the Manned Guarding division, including services such as guarding,
                fire squad, dog squad, bodyguards, etc. Specify the sectors served, such as industries, banks, retail outlets,
                residential colonies, hotels, and institutions.
                </p>
                <p id="CashServices">
                Highlight the range of services provided by the Cash Services division, including secured transfer of cash and
                valuables, ATM replenishment, vaulting and processing services, multi-point cash collection, and caretaker services.
                </p>
                <p id="Recruitmentandtraining">
                Describe the division's role in recruiting, training, and delivering suitable manpower to meet the organization's
                requirements. Emphasize the close alignment with other divisions of Star Security Services.
                </p>
                <p id="Electronicsecuritysystems">
                Provide information about the Electronic Security Systems division and its collaboration with strategic partners.
                Outline the division's activities, including design, installation, and maintenance of various security systems such
                as access control, CCTVs, fire alarm systems, intrusion alarms, etc.
                </p>*@
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDetail" class="control-label"></label>
                <textarea asp-for="ServiceDetail" class="form-control" id="text"></textarea>
                <span asp-validation-for="ServiceDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceLogo" class="control-label"></label>
                <input type="file" name="image" class="form-control" />
                <span asp-validation-for="ServiceLogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubServiceName" class="control-label"></label>
                <input asp-for="SubServiceName" class="form-control" />
                <span asp-validation-for="SubServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubServiceDetail" class="control-label"></label>
                <textarea asp-for="SubServiceDetail" class="form-control"></textarea>
                <span asp-validation-for="SubServiceDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceFee" class="control-label"></label>
                <input asp-for="ServiceFee" class="form-control" />
                <span asp-validation-for="ServiceFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
